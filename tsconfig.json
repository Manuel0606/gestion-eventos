{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true
  }
}
